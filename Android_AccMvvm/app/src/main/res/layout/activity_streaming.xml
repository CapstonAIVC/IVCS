<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.ivcs_android.viewModel.streaming.StreamingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA"
        tools:context=".StreamingActivity">

        <FrameLayout
            android:id="@+id/streamingFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="323dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextureView
                android:id="@+id/textureView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="fill"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/maskImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_launcher_background"
                bindImageBitmap="@{viewModel.dataStreaming.maskImage}"/>

        </FrameLayout>


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/streamingFrameLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/countingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:onClick="@{(view)->viewModel.clickCountSwitch(view)}"
                        android:text="실시간 교통량 측정"
                        android:textColor="#000000"
                        bindBoolSwitch="@{viewModel.dataStreaming.countingChecked}"/>

                    <Switch
                        android:id="@+id/densitySwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:onClick="@{(view)->viewModel.clickDensitySwitch(view)}"
                        android:text="디버깅"
                        android:textColor="#000000"
                        bindBoolSwitch="@{viewModel.dataStreaming.debugChecked}"/>

                    <Switch
                        android:id="@+id/maskSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:onClick="@{(view)->viewModel.clickMaskSwitch(view)}"
                        android:text="마스크"
                        android:textColor="#000000"
                        bindBoolSwitch="@{viewModel.dataStreaming.maskChecked}"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewCounting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{viewModel.dataStreaming.textCount}"
                        android:textAlignment="center"
                        android:textSize="34sp"
                        android:visibility="@{viewModel.dataStreaming.textCountShow ? View.VISIBLE : View.GONE}" />

                    <ImageView
                        android:id="@+id/imageViewDensity"
                        bindImageBitmap="@{viewModel.dataStreaming.densityImage}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="@{viewModel.dataStreaming.debugImageShow ? View.VISIBLE : View.GONE}"
                        app:srcCompat="@drawable/ic_launcher_background" />

                    <ImageView
                        android:id="@+id/imageViewInput"
                        bindImageBitmap="@{viewModel.dataStreaming.inputImage}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="@{viewModel.dataStreaming.debugImageShow ? View.VISIBLE : View.GONE}"
                        app:srcCompat="@drawable/ic_launcher_background" />
                    />
                </LinearLayout>

                <ListView
                    android:id="@+id/cctvList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="50dp"
                    android:background="#FFFFFF" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>